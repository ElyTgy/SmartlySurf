<% layout('layouts/boilerplate')%>

<canvas id="myChart" width="400" height="400"></canvas>
<script>
let currentItem = <%- JSON.stringify(finalData[0]);%>
console.log(currentItem["emotions_names"])
makeChart(currentItem)
function makeChart(item){
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: item["emotions_names"] ,
        datasets: [{
            label: `Distibution of emotion displays for ${item["website_name"]} in mins`,
            data: item["emotions_minutes"],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(167, 141, 138, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(167, 141, 138, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true,
                text: "Emotions"
            }
        }
    }
});
}

</script> 